/**index.wxss**/

page{width:100%;height:100%;font-size:32rpx;color:#666;margin-top: 80rpx;}
view{box-sizing: border-box;}
view:after,view:before{content: "";box-sizing: border-box;}
.flex{display:-webkit-flex;display: flex;width:100%;}
.clearfix{zoom:1;}
.clearfix:after{content: "";height:0;display: block;visibility: hidden;font-size:0;clear:both;}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/* 模态框 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -380rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

/* 提示信息 */

.info_item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.info_pic {
  width: 100rpx;
  height: 90rpx;
  margin: 30rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 50%;
}

.info_word {
  width: 80%;
}

.day_all {
  background-color: #09bb07;
}

.day_part {
  background-color: #ff9800;
}
.day_no{
  background-color: #E51C23;
}
.day_past{
  background-color: #bbbbbb;
}
.day_now{
  background-color: #bbbbbb;
  border: 12rpx solid black;
}
.day_you{
  background-color: #5AA4E8;
}

/* 日历 */

.calendar{overflow-x:hidden;}
.calendar-choose{height:100rpx;line-height:100rpx;background:#fefefe;padding:0 30rpx;font-size:34rpx;color:#353535;border-bottom: 1rpx solid #e5e5e5;}
.calendar .mouth-wrap{flex: 1;display: flex;justify-content: space-between;}
.mouth-wrap .iconfont{color:#b6b6b6;font-size: 50rpx;}
.calendar .mouth-wrap>view{display: inline-block;text-align: center;}
.calendar .mouth-picker{width:200rpx;}
.calendar .prev-mouth{width:100rpx;}
.calendar .next-mouth{width:100rpx;}
.calendar .year-wrap{width:200rpx;-webkit-display: flex;display: flex;-webkit-justify-content:center;justify-content: center;}
.calendar .year-wrap .picker{text-align: center;}
.calendar .week-list{line-height: 60rpx;background:#b9c4c9;}
.calendar .week-list .week-itm{flex:1;text-align: center;font-size:28rpx;color:#fff;}
.calendar .days-list{-webkit-flex-wrap: wrap;flex-wrap: wrap;width:99.995%;}
.calendar .days-list .day{width: 14.285%;height:80rpx;border-right:1rpx solid #e5e5e5;border-bottom:1rpx solid #e5e5e5;color:#333;position: relative;text-align: center;line-height: 80rpx;}
.calendar .days-list .lm,.calendar .days-list .nm{color:#b6b6b6;}
.calendar .day .ep{color:#333;}
.green{background: #09BB07;color: #fff;}
.green>text{color: #fff;}
.yellow{background: #FF9800;color: #fff;}
.yellow>text{color: #fff;}
.red{background: #E51C23;color: #fff;}
.red>text{color: #fff;}
.blue{background: #5AA4E8;color: #fff;}
.blue>text{color: #fff;}
.blo-text{display: block;}
.purple{background: purple;}
.purple>text{color: #fff;}
.getHelp{
  background:#0DBF2A;
  width: 80%;
  color:#fff;
  margin-top: 40rpx;
}
.instruction{
